<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="250dp"
                    android:src="@drawable/depanpuskesmass"
                    />

                <TextView
                    android:id="@+id/text_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"
                    />



            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_width="wrap_content">
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:lineSpacingExtra="8sp"
                    android:textSize="16sp"
                    android:textColor="#FFF"
                    android:justificationMode="inter_word"

                    android:text="Aplikasi ini dibangun unutuk mempermudah puskesmas menentukan status gizi balita secara cepat. Status gizi yang ditentukan berdasarkan berat badan/tinggi badan(BB/TB). Hasil perhitungan dapat diperoleh langsung setelah memasukkan data pengujian. Data yang dipakai pada aplikasi ini berasal dari Puskesmas Banda Sakti Kota Lhokseumawe."/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>



</LinearLayout>